# ==================================================
# Ouvira .env Configuration
# ==================================================
# Copy this file to .env and fill in the values.
# Never commit the real .env file to version control.

# --- Django Core ---
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_ENV=local
# "local" or "production"
TEST_MODE=True
DJANGO_APPEND_SLASH=False

# --- Allowed Hosts ---
ALLOWED_HOSTS=127.0.0.1,localhost

# --- CORS (production only) ---
# Comma-separated list of allowed origins
# CORS_ALLOWED_ORIGINS=https://app.ouvira.com,https://admin.ouvira.com
# CSRF_TRUSTED_ORIGINS=https://app.ouvira.com,https://admin.ouvira.com

# --- Multi-Tenancy ---
TENANT_BASE_DOMAIN=localhost

# --- Database (PostgreSQL) ---
POSTGRES_DB=ouvira_db
POSTGRES_USER=admin_user
POSTGRES_PASSWORD=your-db-password-here
DB_HOST=db
DB_PORT=5432

# --- Cloudflare Turnstile ---
TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# --- Twilio ---
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_SERVICE_SID=your-twilio-service-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
